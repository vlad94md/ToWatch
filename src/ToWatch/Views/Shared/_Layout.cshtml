<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>

    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
<div>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><i class="fa fa-film"></i> TO WATCH </a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                @if (User.Identity.IsAuthenticated)
                {
                    <span>@User.Identity.Name</span>
                    <a asp-controller="Auth" asp-action="Logout" class="btn btn-primary">Logout</a>
                }
                else
                {
                    <form asp-controller="Auth" asp-action="Login" class="navbar-form navbar-right">
                        <div class="form-group">
                            <input type="text" name="Email" placeholder="Email" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="Password" placeholder="Password" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-success">Sign in</button>
                        <a asp-controller="Auth" asp-action="Register" class="btn btn-primary">Register</a>
                    </form>
                }

            </div><!--/.navbar-collapse -->

        </div>
    </nav>


    <div class="container">
        @RenderBody()
    </div>

    <footer>
        <p>&copy; 2016 Company, Inc.</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</div>
</body>
</html>


